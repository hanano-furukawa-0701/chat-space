.message-list__message{data: {message: {id: message.id}}}
  .message-list__message__info
    %p.message-list__message__info__user-name
      = message.user.name
    %p.message-list__message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-list__message__text
    - if message.content.present?
      %p.message-list__message__text__content
        = message.content
    = image_tag message.image.url, class: 'message-list__message__text__image' if message.image.present?