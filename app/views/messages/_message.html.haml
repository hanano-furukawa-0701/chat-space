.message-list__info
  %p.message-list__info__user-name
    = message.user.name
  %p.message-list__info__date
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.message-list__message
  - if message.content.present?
    %p.message-list__message__content
      = message.content
  = image_tag message.image.url, class: 'message-list__message__image' if message.image.present?