.side-bar
  .side-header
    .side-header__top-items
      .side-header__top-items__user-name
        = current_user.name
      %ul.side-header__top-items__icons
        %li.side-header__top-items__icons__new-groups
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.side-header__top-items__icons__edit
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .group-list
    -current_user.groups.each do |group|
      .group-list__group
        = link_to group_messages_path(group) do
          .group-list__group__group-name
            = group.name
          .group-list__group__message
            = group.show_last_message
    